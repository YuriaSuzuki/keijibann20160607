<h1>All Threads</h1>

<ul>
  <% @our_threads.each do |our_thread| %>
    <li>
      <%= link_to our_thread.title, our_thread_path(our_thread.id) %>
      <%=  link_to "Edit", edit_our_thread_path(our_thread.id)%>
      <%=  link_to "Delete", our_thread_path(our_thread.id), method: :delete , data: {confirm: "are you sure?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add new thread", new_our_thread_path %></p>
